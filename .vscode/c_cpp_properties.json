{
    "configurations": [
        {
            "name": "Linux CUDA",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/local/cuda/include",
                "${workspaceFolder}/include",
                "${workspaceFolder}/Common",
                "${workspaceFolder}/Common/UtilNPP",
                "${workspaceFolder}/Common/GL",
                "${workspaceFolder}/lib",
                "/usr/include",
                "/usr/local/include"
            ],
            "defines": [
                "__CUDA_ARCH_LIST__=860",
                "__NV_LEGACY_LAUNCH",
                "__NVCC__",
                "__CUDACC__",
                "CUDA_VERSION=12009"
            ],
            "compilerPath": "/usr/local/cuda/bin/nvcc",
            "cStandard": "c17",
            "cppStandard": "c++11",
            "intelliSenseMode": "linux-gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "compileCommands": "${workspaceFolder}/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "/usr/local/cuda/include/**"
                ],
                "limitSymbolsToIncludedHeaders": false
            }
        }
    ],
    "version": 4
}
